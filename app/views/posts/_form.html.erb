
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-2">
<%= form_for @post do |f| %>
<%= form_title %>
  
  <div class>
    <%= f.label :City %>
  </div>

  <div class="form-group">
    <%= f.text_field :title, class:"form-control" %>
  </div>

<div>
  <%= f.label :description %>
</div>

   <div class="form-group">
   <%= f.text_area :description, class:"form-control", col:"12"%>
   </div>

  
  <div class>
    <%= f.label :Picture %>
  </div>
  
 <div class="text-center"> 
 <%= f.file_field :image %>
 </div>
   
  <div class="text-center">
  <%= f.submit 'Crear Post', class: 'btn btn-default' %>
  </div>

<% end %>

</div>
   </div>
      </div>
